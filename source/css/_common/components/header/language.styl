.header-right{
    position: absolute;
    width: 80px;
    margin: 0 auto;
    /* padding: 25px 0 20px; */
    right: 2%;
    top: 0;
    padding: 22px 0 20px;
    font-size: 14px;

    @media screen and (max-width: 767px) {
    right: 20%;
    padding: 4px 0;
  }
}
#lang-select-wrap {
    /* display: none; */
    position: relative;
}
#lang-select-label {
    /* color: #fff; */
    opacity: .7;
    font-family: Lato,"Helvetica Neue",Helvetica,Arial,sans-serif;
    line-height: 50px;
}
#lang-select-label i {
    opacity: .7;
}
#lang-select-label span {
    padding-left: 8px;
}
#lang-select {
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    -webkit-appearance: menulist-button;
    font-size: inherit;
}